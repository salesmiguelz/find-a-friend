generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id                    String               @id @default(uuid())
  name                  String
  about                 String
  type                  PetType              @default(dog)
  age                   PetAge               @default(puppy)
  energy_level          PetEnergyLevel       @default(low)
  independence_level    PetIndependenceLevel @default(low)
  size                  PetSize              @default(small)
  environment_size      PetEnvironmentSize   @default(small)
  adoption_requirements String[]
  Org                   Org                  @relation(fields: [org_id], references: [id])
  org_id                String

  @@map("pets")
}

model Org {
  id          String @id @default(uuid())
  email       String
  password    String
  name        String
  managerName String
  phone       String
  city_id     Int
  state_id    Int

  Pet   Pet[]
  City  City  @relation(fields: [city_id], references: [id])
  State State @relation(fields: [state_id], references: [id])

  @@map("orgs")
}

model City {
  id    Int    @id @unique
  state Int
  uf    String
  name  String
  Org   Org[]

  @@map("cities")
}

model State {
  id   Int    @id @unique
  uf   String
  name String
  Org  Org[]

  @@map("states")
}

enum PetType {
  dog
  cat
}

enum PetAge {
  puppy
  teen
  adult
}

enum PetSize {
  small
  medium
  large
}

enum PetEnergyLevel {
  low
  medium
  high
}

enum PetIndependenceLevel {
  low
  medium
  high
}

enum PetEnvironmentSize {
  small
  medium
  large
}
